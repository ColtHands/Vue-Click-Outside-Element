{
    "compilerOptions": {
        "allowJs": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "module": "CommonJS",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "rootDir": "src",
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "ES6",
    },
    "lib": [
        "es6",
        "dom"
    ],
    "include": ["src/**/*", "typings.d.ts"],
}